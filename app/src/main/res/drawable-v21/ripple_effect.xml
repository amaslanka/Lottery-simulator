<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="@color/colorAccent"
    tools:targetApi="lollipop">

    <item android:id="@+id/background">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorButtonDisable" />
            <corners android:radius="@dimen/button_corners"/>
            <padding android:bottom="@dimen/button_padding" android:left="@dimen/button_padding"
                android:right="@dimen/button_padding" android:top="@dimen/button_padding" />
        </shape>
    </item>

    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorAccent" />
            <corners android:radius="@dimen/button_corners"/>
            <padding android:bottom="@dimen/button_padding" android:left="@dimen/button_padding"
                android:right="@dimen/button_padding" android:top="@dimen/button_padding" />
        </shape>
    </item>
</ripple>